<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.monopoly.StartController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">
    <Label text="Monopoly" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
    <Button text="New Game" fx:id="newGameButton" onAction="#onNewGameClicked" prefWidth="200"/>
    <Button text="Load Game" fx:id="loadGameButton" onAction="#onLoadClicked" prefWidth="200"/>
</VBox>
